<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootStack" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.souris.PrimaryController">
    <ImageView fx:id="fondoImageView" pickOnBounds="true" preserveRatio="false" />
    <BorderPane fx:id="mainContainer">
        <top>
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 10 0 15;" onMousePressed="#handleMousePressed" onMouseDragged="#handleMouseDragged">
                <ImageView fx:id="windowIcon" fitWidth="18" fitHeight="18" pickOnBounds="true" preserveRatio="true"/>
                <Label text="SourisAlarm" styleClass="window-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button onAction="#handleMinimizar" text="â€”" styleClass="window-button"/>
                <Button onAction="#handleCerrar" text="âœ•" styleClass="window-button, close-button"/>
            </HBox>
        </top>
        <center>
            <VBox alignment="CENTER" spacing="20">
                <padding><Insets top="10" right="0" bottom="30" left="0"/></padding>
                
                <HBox alignment="CENTER" spacing="0">
                    <Spinner fx:id="spinnerHoras" editable="true" prefWidth="130" styleClass="minimal-spinner, spinner-hours"/>
                    <Label text=":" styleClass="clock-colon"/>
                    <Spinner fx:id="spinnerMinutos" editable="true" prefWidth="130" styleClass="minimal-spinner, spinner-minutes"/>
                    <ToggleButton fx:id="toggleAmPm" text="AM" styleClass="am-pm-toggle"/>
                </HBox>

                <VBox alignment="CENTER" spacing="10">
                    <Label text="Repetir:" style="-fx-text-fill: -fx-secondary-text; -fx-font-size: 14px;"/>
                    <HBox fx:id="dayContainer" alignment="CENTER" spacing="12"/>
                </VBox>
                <Region prefHeight="20"/>
                <Button onAction="#handleAgregarAlarma" text="Guardar" styleClass="button-save" />
                <Separator style="-fx-opacity: 0.1; -fx-padding: 20 40 10 40;"/>
                <ListView fx:id="listViewAlarmas" VBox.vgrow="ALWAYS" style="-fx-padding: 0 30;">
                    <placeholder><Label text="No hay alarmas guardadas" styleClass="placeholder-label"/></placeholder>
                </ListView>
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 40;">
                    <Label text="ðŸ”Š" style="-fx-text-fill: -fx-secondary-text;"/>
                    <Slider fx:id="sliderVolumen" max="1.0" value="1.0" prefWidth="120"/>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</StackPane>